{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.cjs",
    "scripts/**/*.ts",
    "eslint.config.mjs",
    "eslint.config.custom.mjs",
    "resources/**/*.json",
    "vitest.config.mts",
    "drizzle.config.ts"
  ],
  "exclude": ["tsconfig.json", "tsconfig.eslint.json", "tsconfig.prod.json"]
}
