{
  "name": "maeum-hono-pet-store",
  "version": "1.0.0",
  "description": "Delicious hono.js boilerplate",
  "type": "module",
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "dk": "drizzle-kit",
    "build-script": "tsc --project ./tsconfig.json --incremental --noEmit",
    "build": "run-s clean build-script",
    "alias-script": "tsc-alias --project tsconfig.prod.json",
    "bundle-script": "cross-env FORMAT=esm node .configs/esbuild.mjs",
    "bundle": "run-s clean bundle-script alias-script",
    "clean": "rimraf dist",
    "dev": "nodemon --config ./.configs/nodemon.json",
    "debug": "cross-env DEBUG=maeum:* ENV_APPLICATION_LOG_LEVEL=debug tsx --tsconfig tsconfig.json --import src/loader.ts --inspect-brk --nolazy src/app.ts",
    "lint": "eslint --cache .",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write src/**/*.ts",
    "lnb": "run-p build lint",
    "route": "cross-env NODE_ENV=production fast-maker route --config .configs/.fastmakerrc",
    "start:withoutpm2": "TZ=Asia/Seoul node --enable-source-maps -r ./dist/loader dist/listen.js",
    "start": "TZ=Asia/Seoul ./node_modules/pm2/bin/pm2-runtime -s start .configs/pm2.config.cjs > /dev/null",
    "test": "cross-env DEBUG=maeum:* vitest run --coverage",
    "dd": "deps-diff md -d prod -d dev --title-list-type 'm' --deps-list-type 'm' --content-list-type 'm'",
    "_uid": "node -e \"console.log(require('crypto').randomUUID().replace(/-/g, ''))\"",
    "uid": "node -e \"console.log(require('crypto').randomUUID())\"",
    "seed": "tsx scripts/seed.ts",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maeumjs/maeum-pet-store.git"
  },
  "author": "ByungJoon Lee",
  "license": "MIT",
  "devDependencies": {
    "@eslint/compat": "^2.0.1",
    "@eslint/js": "^9.39.2",
    "@testcontainers/mysql": "^11.12.0",
    "@tsconfig/node20": "^20.1.4",
    "@types/node": "^22.19.11",
    "@types/node-polyglot": "^2.5.0",
    "@vitest/coverage-v8": "^4.0.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "deps-diff": "^1.0.2",
    "drizzle-kit": "^0.31.8",
    "erdia": "^3.7.0",
    "esbuild": "^0.21.4",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-extended": "^3.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.5",
    "nodemon": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.1",
    "read-pkg": "^5.2.0",
    "rimraf": "^5.0.7",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.15.1",
    "typescript": "^5.4.2",
    "vite-tsconfig-paths": "^6.1.1"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.8",
    "@hono/swagger-ui": "^0.5.3",
    "@hono/zod-openapi": "^1.2.0",
    "@libsql/client": "^0.17.0",
    "chalk": "^5.6.2",
    "cron": "^3.1.7",
    "dayjs": "^1.11.19",
    "defu": "^6.1.4",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.45.1",
    "drizzle-zod": "^0.8.3",
    "hono": "^4.11.3",
    "hono-pino": "^0.10.3",
    "http-status-codes": "^2.3.0",
    "jsonc-parser": "^3.2.1",
    "my-easy-fp": "^0.22.0",
    "my-node-fp": "^0.10.3",
    "mysql2": "^3.17.2",
    "node-polyglot": "^2.5.0",
    "pathe": "^2.0.3",
    "pino": "^10.3.1",
    "radash": "^12.1.1",
    "type-fest": "^4.20.0",
    "url-naong": "^1.3.0",
    "uuid": "^13.0.0",
    "vitest": "^4.0.18",
    "zod": "^4.3.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "cross-env NODE_ENV=production eslint --cache"
    ],
    "*.{js,jsx,ts,tsx},*.json,.{eslintrc.cjs,prettierrc}": [
      "cross-env NODE_ENV=production prettier --ignore-path .eslintignore --parser json --write"
    ]
  }
}
